@model QuanLyDoanVien.Models.TaiKhoanSinhVienModel

@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}





<div class="row">
    <div class="col-md-12">
        <div class="portlet box red-sunglo">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Thông Tin Tài Khoản
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("DoiMatKhau", "ThayDoiMatKhau", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-bordered" }))
                 {
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên Đăng Nhập</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", @readonly="readonly", @type="text" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Mật Khẩu</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.MatKhauCu, new { @class = "form-control", @type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Mật Khẩu Mới</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.MatKhauMoi, new { @class = "form-control", @type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Xác Nhận Mật Khẩu</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.XacNhanMatKhau, new { @class = "form-control", @type = "password" })
                            </div>
                        </div>
                    </div>
                    <div class="margin-top-10" style="text-align: center; margin-top: 50px !important; padding-bottom: 20px !important;">
                        <input type="submit" class="btn green-haze" />
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>



